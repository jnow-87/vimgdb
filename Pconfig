mainmenu "vimgdb configuration"

comment "user interface"
choice
	prompt "gui implementation"

	config GUI_CURSES
		bool "ncurses"

	config GUI_VIM
		bool "vim netbeans"
endchoice

config VIM_NB_PORT
	int "netbeans port"
	depends on GUI_VIM
	default 1235
	range 1 65535

config VIM_KEEP_GDBLOG
	bool "keep gdb-log"
	depends on GUI_VIM
	default y

config VIM_KEEP_USERLOG
	bool "keep user-log"
	depends on GUI_VIM
	default y

comment "log system"
config LOG_FILE
	string "log file"
	default "/tmp/vimgdb.log"

config LOG_ERROR
	bool "log 'error' messages"

config LOG_DEBUG
	bool "log 'debug' messages"

config LOG_GDB
	bool "log 'gdb' messages"

config LOG_VIM
	bool "log 'vim' messages"

config LOG_USER
	bool "log 'user' messages"

config LOG_TEST
	bool "log 'application testing' messages"

config LOG_TODO
	bool "log 'todo' messages"

choice
	prompt "Build type"

	config BUILD_RELEASE
		bool "release"

	config BUILD_DEBUG
		bool "debug"
endchoice

menu "Hidden"
	visible if 0

	config BUILD_TYPE
		string "Build type"
		default "debug" if BUILD_DEBUG
		default "release" if BUILD_RELEASE
endmenu
